<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slide"
    tools:context=".DetailsList.DetailsList">

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/search_bar"
        android:id="@+id/recycler_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_bar"
        app:mt_speechMode="false"
        android:layout_margin="10dp"
        app:mt_hint="Enter for search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.mancj.materialsearchbar.MaterialSearchBar>
</android.support.constraint.ConstraintLayout>